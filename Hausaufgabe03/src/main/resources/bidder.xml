<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
	<import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

	<import resource="classpath:gateway_settings.xml" />

	<bean name="BidderNode" parent="AotNode" scope="singleton">
		<property name="logLevel" value="WARN" />
		<property name="agents">
			<list>
				<ref bean="BidderAgent" />
			</list>
		</property>
	</bean>

	<bean name="BidderAgent" parent="SimpleAgent" scope="prototype">
		<property name="agentBeans">
			<list>
				<bean name="BidderBeanA" class="de.dailab.jiactng.aot.auction.client.BidderBeanA3" scope="prototype">
					<property name="logLevel" value="INFO" />
					<property name="executionInterval" value="2000" />
					
					<property name="bidderId" value="Bidder_18" />
					<property name="groupToken" value="Group18_91679" />
					<property name="messageGroup" value="de.dailab.jiactng.aot.auction" />
					<property name="windowSize" value="6" />
					<!-- XXX add more properties if needed, e.g. for fine-tuning strategies -->
				</bean>

				<bean name="BidderBeanB" class="de.dailab.jiactng.aot.auction.client.BidderBeanB2" scope="prototype">
					<property name="logLevel" value="INFO" />
					<property name="executionInterval" value="2000" />

					<property name="bidderId" value="Bidder_18" />
					<property name="groupToken" value="Group18_91679" />
					<property name="messageGroup" value="de.dailab.jiactng.aot.auction" />
					<property name="windowSize" value="6" />
					<!-- XXX add more properties if needed, e.g. for fine-tuning strategies -->
				</bean>

				<bean name="BidderBeanC" class="de.dailab.jiactng.aot.auction.client.BidderBeanC" scope="prototype">
					<property name="logLevel" value="INFO" />
					<property name="executionInterval" value="2000" />

					<property name="bidderId" value="Bidder_18" />
					<property name="groupToken" value="Group18_91679" />
					<property name="messageGroup" value="de.dailab.jiactng.aot.auction" />
					<property name="windowSize" value="6" />
					<!-- XXX add more properties if needed, e.g. for fine-tuning strategies -->
				</bean>

				<bean name="ProxyBean" class="de.dailab.jiactng.aot.auction.client.ProxyBean" scope="prototype">
					<property name="logLevel" value="INFO" />
					<property name="executionInterval" value="2000" />

					<property name="bidderId" value="Bidder_18" />
					<property name="groupToken" value="Group18_91679" />
					<property name="messageGroup" value="de.dailab.jiactng.aot.auction" />
					<property name="windowSize" value="6" />
					<!-- XXX add more properties if needed, e.g. for fine-tuning strategies -->
				</bean>
			</list>
		</property>
	</bean>

</beans>
